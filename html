        <div class="app-container">
            <div class="date-display" id="fechaActual"></div>
            
            <div class="grid-container">
                <div class="section">
                    <div class="section-title">FIRST</div>
                    
                    <div class="input-group">
                        <label for="efectivo">Efectivo:</label>
                        <input type="number" id="efectivo" min="0" step="0.01" value="0">
                    </div>
                    
                    <div class="input-group">
                        <label for="sobra">Sobra:</label>
                        <input type="number" id="sobra" min="0" step="0.01" value="0">
                    </div>
                    
                    <div class="input-group">
                        <label for="sube">SUBE:</label>
                        <input type="number" id="sube" min="0" step="0.01" value="0">
                    </div>
                    
                    <div class="input-group total">
                        <label>Total First:</label>
                        <span id="totalFirst">$0.00</span>
                    </div>
                </div>

                <div class="section">
                    <div class="section-title">RECAUDACIÓN</div>
                    
                    <div class="input-group">
                        <label for="posnetFrances">Posnet Francés:</label>
                        <input type="number" id="posnetFrances" min="0" step="0.01" value="0">
                    </div>
                    
                    <div class="input-group">
                        <label for="posnetColegio">Posnet Colegio:</label>
                        <input type="number" id="posnetColegio" min="0" step="0.01" value="0">
