    <script>
        // Inicialización de variables globales
        let historial = JSON.parse(localStorage.getItem('historialCaja')) || [];
        
        // Mostrar fecha actual
        function actualizarFecha() {
            const hoy = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('fechaActual').textContent = hoy.toLocaleDateString('es-ES', options);
        }
        
        // Función para formatear números como moneda
        function formatoMoneda(valor) {
            return new Intl.NumberFormat('es-AR', {
                style: 'currency',
                currency: 'ARS'
            }).format(valor);
        }
        
        // Función para calcular los totales
        function calcularTotales() {
            // Obtener valores de los inputs
            const efectivo = parseFloat(document.getElementById('efectivo').value) || 0;
            const sobra = parseFloat(document.getElementById('sobra').value) || 0;
            const sube = parseFloat(document.getElementById('sube').value) || 0;
            
            const posnetFrances = parseFloat(document.getElementById('posnetFrances').value) || 0;
            const posnetColegio = parseFloat(document.getElementById('posnetColegio').value) || 0;
            const posnetMP = parseFloat(document.getElementById('posnetMP').value) || 0;
            const posnetProvincia = parseFloat(document.getElementById('posnetProvincia').value) || 0;
            const efectivoEgresos = parseFloat(document.getElementById('efectivoEgresos').value) || 0;
            const transferencia = parseFloat(document.getElementById('transferencia').value) || 0;
            const falta = parseFloat(document.getElementById('falta').value) || 0;
            
            // Calcular total de first
            const totalFirst = efectivo + sobra + sube;
            
            // Calcular total de recaudación
            const totalRecaudacion = posnetFrances + posnetColegio + posnetMP + 
                                   posnetProvincia + efectivoEgresos + transferencia + falta;
            
            // Calcular saldo final
            const saldo = totalFirst - totalRecaudacion;
            
            // Actualizar los elementos en pantalla
            document.getElementById('totalFirst').textContent = formatoMoneda(totalFirst);
            document.getElementById('totalRecaudacion').textContent = formatoMoneda(totalRecaudacion);
            
            const saldoFinalElement = document.getElementById('saldoFinal');
            saldoFinalElement.textContent = formatoMoneda(saldo);
            
            // Aplicar color según el saldo
            if (saldo >= -10000 && saldo <= 10000) {
                saldoFinalElement.className = 'positive';
            } else {
                saldoFinalElement.className = 'negative';
            }
            
            return { totalFirst, totalRecaudacion, saldo };
        }
        
        // Función para limpiar todos los campos
        function limpiarCampos() {
            document.getElementById('efectivo').value = '0';
            document.getElementById('sobra').value = '0';
            document.getElementById('sube').value = '0';
            
            document.getElementById('posnetFrances').value = '0';
            document.getElementById('posnetColegio').value = '0';
            document.getElementById('posnetMP').value = '0';
            document.getElementById('posnetProvincia').value = '0';
            document.getElementById('efectivoEgresos').value = '0';
            document.getElementById('transferencia').value = '0';
            document.getElementById('falta').value = '0';
            
            document.getElementById('totalFirst').textContent = '$0.00';
            document.getElementById('totalRecaudacion').textContent = '$0.00';
            
            const saldoFinalElement = document.getElementById('saldoFinal');
            saldoFinalElement.textContent = '$0.00';
            saldoFinalElement.className = '';
        }
        
        // Función para guardar en el historial
        function guardarEnHistorial() {
            const calculo = calcularTotales();
            const hoy = new Date();
            const fecha = hoy.toLocaleDateString('es-ES');
            const hora = hoy.toLocaleTimeString('es-ES');
            
            // Crear objeto con los datos
            const registro = {
                fecha: `${fecha} ${hora}`,
                first: calculo.totalFirst,
                recaudacion: calculo.totalRecaudacion,
                saldo: calculo.saldo,
                timestamp: hoy.getTime()
            };
            
            // Agregar nuevo registro
            historial.push(registro);
            
            // Guardar en localStorage
            localStorage.setItem('historialCaja', JSON.stringify(historial));
            
            // Actualizar la visualización del historial
            mostrarHistorialCompleto();
            
            alert('Registro guardado correctamente para el ' + fecha);
        }
        
        // Función para mostrar el historial completo
        function mostrarHistorialCompleto() {
            const historialCompleto = document.getElementById('historialCompleto');
            const resumenHistorial = document.getElementById('resumenHistorial');
            
            historialCompleto.innerHTML = '';
            
            if (historial.length === 0) {
                historialCompleto.innerHTML = '<div class="history-item"><div colspan="4" style="text-align: center; grid-column: 1 / span 4;">No hay registros en el historial</div></div>';
                resumenHistorial.innerHTML = '';
                return;
            }
            
            // Ordenar historial por fecha (más recientes primero)
            historial.sort((a, b) => b.timestamp - a.timestamp);
            
            // Calcular totales
            let totalFirst = 0;
            let totalRecaudacion = 0;
            let totalSaldo = 0;
            
            // Mostrar todos los registros (máximo 30)
            const historialMostrar = historial.slice(0, 30);
            
            historialMostrar.forEach(registro => {
                const item = document.createElement('div');
                item.className = 'history-item';
                
                const saldoClass = registro.saldo >= -10000 && registro.saldo <= 10000 ? 'positive' : 'negative';
                
                item.innerHTML = `
                    <div class="history-date">${registro.fecha}</div>
                    <div class="history-amount">${formatoMoneda(registro.first)}</div>
                    <div class="history-amount">${formatoMoneda(registro.recaudacion)}</div>
                    <div class="history-amount ${saldoClass}">${formatoMoneda(registro.saldo)}</div>
                `;
                
                historialCompleto.appendChild(item);
                
                // Acumular totales
                totalFirst += registro.first;
                totalRecaudacion += registro.recaudacion;
                totalSaldo += registro.saldo;
            });
            
            // Mostrar resumen
            resumenHistorial.innerHTML = `
                <div>Resumen General:</div>
                <div>Total First: ${formatoMoneda(totalFirst)}</div>
                <div>Total Recaudación: ${formatoMoneda(totalRecaudacion)}</div>
                <div>Saldo Acumulado: ${formatoMoneda(totalSaldo)}</div>
            `;
        }
        
        // Función para limpiar el historial
        function limpiarHistorial() {
            if (confirm('¿Está seguro de que desea eliminar todo el historial? Esta acción no se puede deshacer.')) {
                historial = [];
                localStorage.setItem('historialCaja', JSON.stringify(historial));
                mostrarHistorialCompleto();
                alert('Historial eliminado correctamente');
            }
        }
        
        // Función para exportar a CSV
        function exportarCSV() {
            if (historial.length === 0) {
                alert('No hay datos para exportar');
                return;
            }
            
            // Crear contenido CSV
            let csv = 'Fecha,First,Recaudación,Saldo\n';
            
            historial.forEach(registro => {
                csv += `"${registro.fecha}",${registro.first},${registro.recaudacion},${registro.saldo}\n`;
            });
            
            // Crear archivo y descargar
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            
            link.setAttribute('href', url);
            link.setAttribute('download', 'historial_caja.csv');
            link.style.visibility = 'hidden';
            
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // Inicialización cuando el DOM está listo
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar fecha
            actualizarFecha();
            
            // Calcular valores iniciales
            calcularTotales();
            
            // Mostrar historial existente
            mostrarHistorialCompleto();
            
            // Event Listeners para los botones principales
            document.getElementById('btnCalcular').addEventListener('click', calcularTotales);
            document.getElementById('btnLimpiar').addEventListener('click', limpiarCampos);
            document.getElementById('btnGuardar').addEventListener('click', guardarEnHistorial);
            document.getElementById('btnLimpiarHistorial').addEventListener('click', limpiarHistorial);
            document.getElementById('exportBtn').addEventListener('click', exportarCSV);
            
            // Calcular automáticamente al cambiar valores
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('input', calcularTotales);
            });
        });
    </script>
</body>
</html>
